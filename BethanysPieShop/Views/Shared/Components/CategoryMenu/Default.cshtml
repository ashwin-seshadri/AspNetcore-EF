@model IEnumerable<Category>

    <li class="dropdown">
        <a asp-controller="Pie" asp-action="Index" class="dropdown-toggle" data-toggle="dropdown">Pies<b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>
                    <a asp-controller="Pie" asp-action="Index" asp-route-category="@category.Name">@category.Name</a>
                </li>
            }
            <li class="divider"></li>
            <li>
                <a asp-controller="Pie" asp-action="Index" asp-route-category="">View all pies</a>
            </li>
        </ul>
    </li>


